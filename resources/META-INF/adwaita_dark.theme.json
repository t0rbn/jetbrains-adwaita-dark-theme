{
  "name": "adwaita-dark",
  "dark": true,
  "author": "t0rbn",
  "editorScheme": "/META-INF/adwaita_dark.xml",
  "colors": {
    "backgroundDefault": "#303030",
    "backgroundElevation": "#2a2a2a",
    "backgroundElevationDouble": "#3f3f3f",

    "foregroundDefault": "#D0D0D0",
    "foregroundLighter": "#ffffff",

    "borderDefault": "#454545",
    "accent": "#3584E4"
  },
  "ui": {
    "*": {
      "background": "backgroundDefault",
      "foreground": "foregroundDefault",
      "infoForeground": "foregroundDefault",

      "selectionBackground": "backgroundElevationDouble",
      "selectionForeground": "foregroundLighter",
      "selectionInactiveBackground": "backgroundElevationDouble",
      "selectionInactiveForeground": "foregroundLighter",

      "disabledBackground": "backgroundElevation",
      "inactiveBackground": "backgroundDefault",
      "inactiveForeground": "foregroundDefault",

      "disabledForeground": "borderDefault",
      "disabledText": "borderDefault",

      "acceleratorForeground": "foregroundLighter",
      "acceleratorSelectionForeground": "foregroundLighter",

      "errorForeground": "#F66151",

      "borderColor": "borderDefault",
      "disabledBorderColor": "borderDefault",
      "focusColor": "accent",
      "focusedBorderColor": "borderDefault",
      "hoverBorderColor": "borderDefault",
      "pressedBorderColor": "borderDefault",

      "separatorColor": "backgroundElevation",
      "lineSeparatorColor": "backgroundElevation"
    },
    "EditorTabs": {
      "background": "backgroundDefault",
      "underlinedTabBackground": "backgroundDefault"
    },
    "Tree": {
      "selectionBackground": "accent",
      "selectionForeground": "foregroundLighter",
      "selectionInactiveBackground": "accent"
    }
  }
}
